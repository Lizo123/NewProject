<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.project1.MainPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<!--
        <Button
            android:id="@+id/openpopup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="OPEN POPUP"/>

        <Button
            android:id="@+id/opendialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/openpopup"
            android:layout_centerHorizontal="true"
            android:text="Open Dialog"
            android:onClick="openDialog"/>
-->
        <ImageButton
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:id="@+id/profile"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:onClick="goToChatPage"/>

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/profile"
            android:id="@+id/name"
            android:text="Liza Antoun"
            android:textSize="17dp"
            android:layout_marginTop="15dp"
            android:textIsSelectable="false" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/status"
            android:text="Hiii :D"
            android:layout_below="@+id/name"
            android:layout_toRightOf="@+id/profile"
            android:layout_alignBottom="@+id/profile"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="13dp"
            android:textColor="#010101" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/new_message_plus_sign"
            android:scaleType="fitCenter"
            android:clickable="true" />

        <!--<TextClock-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/textClock"-->
        <!-- -->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:text="3:30" />-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3:30"
            android:id="@+id/time"
            android:layout_alignTop="@+id/radioButton"
            android:layout_alignLeft="@+id/imageButton"
            android:layout_alignStart="@+id/imageButton" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton"
            android:layout_toRightOf="@id/name"
            android:checked="true"
            android:layout_above="@+id/status"
            android:textSize="50dp"
            android:layout_alignTop="@+id/name"
            android:layout_toLeftOf="@+id/imageButton"
            android:layout_toStartOf="@+id/imageButton" />
        <!--<view-->

        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="2dip"-->
        <!--android:background="#010101"-->
        <!--android:src="@mipmap/back"/>-->
        <ImageView
            android:id="@+id/horizontal"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10px"
            android:paddingBottom="5px"
            android:layout_height="1dp"
            android:layout_width="fill_parent"
            android:src="@android:drawable/divider_horizontal_bright"
            android:layout_below="@id/status"
            android:visibility="visible"
            android:background="#25050404"
            android:scaleType="fitXY"
            android:nestedScrollingEnabled="true"
            android:outlineProvider="paddedBounds"
            android:theme="@style/Base.Widget.AppCompat.ActionBar.Solid" />

        <ImageButton
            android:layout_below="@id/horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/profile2"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:onClick="goToChatPage"/>

        <TextView
            android:layout_below="@id/horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/profile2"
            android:id="@+id/name2"
            android:text="Mina Antoun"
            android:textSize="17dp"
            android:layout_marginTop="15dp"
            android:textIsSelectable="false" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/status2"
            android:text="I told u yesterday"
            android:layout_below="@+id/name2"
            android:layout_toRightOf="@+id/profile2"
            android:layout_alignBottom="@+id/profile2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="13dp"
            android:textColor="#010101" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageButton2"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/new_message_plus_sign"
            android:scaleType="fitCenter"
            android:clickable="true"
            android:onClick="selectContacts"/>

        <!--<TextClock-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:id="@+id/textClock"-->
        <!-- -->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:text="3:30" />-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3:30"
            android:id="@+id/time2"
            android:layout_alignTop="@+id/radioButton2"
            android:layout_alignLeft="@+id/imageButton2"
            android:layout_alignStart="@+id/imageButton2" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton2"
            android:layout_toRightOf="@id/name2"
            android:checked="false"
            android:layout_above="@+id/status2"
            android:textSize="50dp"
            android:layout_alignTop="@+id/name2"
            android:layout_toLeftOf="@+id/imageButton2"
            android:layout_toStartOf="@+id/imageButton2" />
        <ImageView
            android:id="@+id/horizontal2"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10px"
            android:paddingBottom="5px"
            android:layout_height="1dp"
            android:layout_width="fill_parent"
            android:src="@android:drawable/divider_horizontal_bright"
            android:layout_below="@id/profile2"
            android:visibility="visible"
            android:background="#25050404"
            android:scaleType="fitXY"
            android:nestedScrollingEnabled="true"
            android:outlineProvider="paddedBounds"
            android:theme="@style/Base.Widget.AppCompat.ActionBar.Solid" />
        <!--<view-->
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:id="@+id/drawerPane"
        android:layout_gravity="start"
        android:background="@android:color/white">

        <!-- Profile Box -->
        <RelativeLayout
            android:id="@+id/profileBox"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/material_blue_grey_800"
            android:padding="8dp">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/default_profile_picture"
                android:layout_marginTop="15dp"
                android:onClick="goToRegistration"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/avatar"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/userName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jon Doe"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="4dp"
                    android:text="+20 xx xxxxxxxx"
                    android:textColor="#fff"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_below="@id/profileBox"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="?android:attr/dividerVertical"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:paddingLeft="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="Status"
                android:textAllCaps="false">
            </Button>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="?android:attr/dividerVertical"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:gravity="left|center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:text="New broadcast"
                android:textAllCaps="false">
            </Button>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="?android:attr/dividerVertical"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:gravity="left|center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:text="Update job &amp; location"
                android:textAllCaps="false">
            </Button>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="?android:attr/dividerVertical"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:gravity="left|center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:text="Close Friends list"
                android:textAllCaps="false">
            </Button>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="?android:attr/dividerVertical"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:paddingLeft="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="Privacy settings"
                android:textAllCaps="false"
                android:onClick="goToPrivacySettings">
            </Button>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="?android:attr/dividerVertical"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:paddingLeft="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="Settings"
                android:textAllCaps="false">
            </Button>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="?android:attr/dividerVertical"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:gravity="left|center_vertical"
                android:background="?android:attr/selectableItemBackground"
                android:text="Registration"
                android:textAllCaps="false"
                android:onClick="goToRegistration">
            </Button>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="?android:attr/dividerVertical"/>

        </LinearLayout>

    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>
